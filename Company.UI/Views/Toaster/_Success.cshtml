@model string
@{
    Layout = null;
}
<div class="toast mx-auto bg-success text-success toast-success position-absolute w-50" role="alert" data-delay="2000" data-autohide="true" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <h3 class="mr-auto mb-0 text-success">Success</h3>
            <button type="button" class="ml-2 mb-1 close text-success" data-dismiss="toast" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="toast-body">
            <h6 class="mb-0 toast-message">@Model</h6>
    </div>
</div>