@using Data.Processing.Models
@model Sensitiveword

<div class="modal fade" id="add-word" tabindex="-1" role="dialog" aria-labelledby="header-add-word" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form method="POST">
                <div class="modal-header">
                    <h3 class="modal-title" id="header-add-word">Add New Word Definition</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">                
                    <input type="hidden" id="Id" name="Id" value="@Model.Id" />
                    <input type="hidden" id="CreatedOn" name="CreatedOn" value="@Model.CreatedOn" />
                    <input type="hidden" id="ModifiedOn" name="ModifiedOn" value="@Model.ModifiedOn" />
                    <div class="form-group">
                        <label for="WordDefinition" class="col-form-label-sm font-weight-bold">@Html.DisplayNameFor(m => m.WordDefinition)</label>                        
                        <input class="form-control" id="WordDefinition" name="WordDefinition" type="text" value="@Model.WordDefinition">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <input type="submit" class="btn btn-primary" formaction="/Word/Create" value="Add New" />
                </div>
            </form>
        </div>
    </div>
</div> 